<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;net40;net45;net46</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <PackageReference Include="nlog" Version="5.0.0-beta10" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net40' OR '$(TargetFramework)' == 'net45' OR '$(TargetFramework)' == 'net46'">
    <PackageReference Include="nlog" Version="4.4" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>
  
  <PropertyGroup>
    <Version>1.0</Version>
    <FileVersion>1.0</FileVersion>
    <Authors>Joona Luoma</Authors>
    <Description>NLog logging context tool</Description>
    <Copyright>Copyright (c) 2017 Joona Luoma</Copyright>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Joona.NLogContext</PackageId>
    <PackageVersion>1.0</PackageVersion>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageTags>NLog logging context scope scoping identifier id</PackageTags>
    <PackageLicenseUrl>https://github.com/chartjunk/NLogContext/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/chartjunk/NLogContext</PackageProjectUrl>
  </PropertyGroup>

</Project>